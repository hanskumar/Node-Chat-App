                                                    <h5 class="font-size-16 mb-0 text-truncate">
                                                    
                                                <a href="#" class="text-reset user-profile-show"><%= usersInChat.name%></a></br>
                                                <span class="loggedIn_status logged_in__<%=usersInChat._id%>" style="display:none;">Online</span>
                                                
                                                 
                                            </h5>
                                        </div>
